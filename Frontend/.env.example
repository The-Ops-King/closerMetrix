# CloserMetrix Dashboard — Environment Variables
# Copy this to .env and fill in real values

# Server
PORT=8080
NODE_ENV=development

# BigQuery
GCP_PROJECT_ID=closer-automation
BQ_DATASET=CloserAutomation
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
# OR in production (Cloud Run): base64-encoded service account key
# GCP_SERVICE_ACCOUNT_KEY=<base64-encoded-key>

# Authentication — generate a long random string for admin access
ADMIN_API_KEY=change-me-to-a-long-random-string

# CORS — only needed in development (Vite dev server origin)
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=info
